(
Tdef(\bass,{
	var bassmel=Prand(~mainmelody.melody(~degrees,48),inf).asStream;
	loop{
		~bass.set(\note,bassmel.next,
			\filtminf,50,
			\filtmaxf,8420,
			\filtime,0.0125,
			\rq,0.5,
			\iphase,0.5,
			\amp1,0.5,
			\amp2,0.5,
			\out,50);
		~tiempos.wait;
	}
}).quant_(1);
);
//bass 2
(
Tdef(\bass2,{
	var bass2mel=Pseq(~mainmelody.melody(~degrees,48).mirror2,inf).asStream;

	loop{
		~bass2.set(\note,bass2mel.next,
			\trig,1,
			\filtminf,80,
			\filtmaxf,12900,
			\filtime,0.25,
			\rq,0.5,
			\bandw,0.5,
			\iphase,0.05,
			\amp1,0.25,
			\amp2,0.1,
			\out,50);
		~tiempos.wait;
	}
}).quant_(1);
);
//ambient pad
(
Tdef(\pad,{
	var padmel=Pxrand(~mainmelody.melody(~degrees,48),inf).asStream;
	~amb.set(\waveform, 'pulse' );//use 'sin' or 'tri' or 'pulse' only
	loop{
		~amb.set(\note,padmel.next);
		~amb.set(\trem,8);
		~amb.set(\vrel,2);
		~amb.set(\iphase,0.25);
		~amb.set(\cutf,12420);
		~amb.set(\rq,0.5);
		~amb.set(\amp,0.05);
		~amb.set(\out,50);
		~tiempos.wait;
	}
}).quant_(1);
);
//ambiente pad 2
(
Tdef(\pad2,{
	var pad2mel=Pseq(~mainmelody.melody(~degrees,48),inf).asStream;
	loop{
		~amb2.set(\note,pad2mel.next);
		~amb2.set(\fmax,[16,32,64,128,8].choose);
		~amb2.set(\fm,[2,4,8].choose);
		~amb2.set(\harm,120);
		~amb2.set(\rmix,0.79);
		~amb2.set(\rroom,0.15);
		~amb2.set(\rfilt,0.5);
		~amb2.set(\amp1,0.09);
		~amb2.set(\amp2,0.05);
		~amb2.set(\out,50);
		~tiempos.wait;
	}
}).quant_(1);
);
//Chord Synths
(
Tdef(\acordes,{
	var acmel=Pseq(~mainmelody.melody(~degrees,48),inf).asStream;
	//Use 'M', 'm', 'M7', 'm7', 'Mmaj7', 'mmaj7', '5dim7' or '5aug7' keys only
	var cambia=Prand(['m','m7','mmaj7'],inf).asStream;
	loop{
		~chord.set(\chord,cambia.next);
		~chord.set(\note,acmel.next);
		~chord.set(\iphase,0.2);
		~chord.set(\width,0.5);
		~chord.set(\cutf,10220);
		~chord.set(\rq,0.5);
		~chord.set(\pan,0);
		~chord.set(\amp,0.1);
		~chord.set(\out,50);
		~tiempos.wait;
	}
}).quant_(1);
);
(
Tdef(\acordes2,{
	var ac2mel=Prand(~mainmelody.melody(~degrees,48),inf).asStream;
	//Use 'M', 'm', 'M7', 'm7', 'Mmaj7', 'mmaj7', 'M9',  'M9m', 'm9' or 'm9m' keys only
	var cambia2=Prand(['m','M','M9','mmaj7','m9m'],inf).asStream;
	loop{
		~chord2.set(\chord,cambia2.next);
		~chord2.set(\note,ac2mel.next);
		~chord2.set(\cutf,12220);
		~chord2.set(\rq,0.25);
		~chord2.set(\pan,[0,-0.97]);
		~chord2.set(\amp,0.1);
		~chord2.set(\out,50);
		~tiempos.wait;
	}
}).quant_(1);
);
